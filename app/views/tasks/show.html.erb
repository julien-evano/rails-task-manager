<h1><%= @task.title %></h1>
<%= link_to 'Edit Task', task_edit_path(@task.id) %>

<p class="bg-light rounded description center"><%= @task.details %></p>

<INPUT type="checkbox" name="<%= @task.id %>" value="<%= @task.title %>" <%= @task.completed ? "checked" : "" %>>
<%= @task.completed ? "This task is completed" : "This task is not completed yet" %>

<div class="line"></div>

<%= link_to "Back to the list", tasks_path %>
